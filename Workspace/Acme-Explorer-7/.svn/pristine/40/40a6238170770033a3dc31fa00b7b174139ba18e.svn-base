<%-- form for not authenticated users searching trips --%>
<security:authorize access="isAnonymous()">
<form:form action="trip/filter-list.do" modelAttribute="keyword">

<form:label path="keyword">
		<spring:message code="finder.keyword" />:
	</form:label>
<form:input path="keyboard"/>
<br />

<input type="submit" name="search"
		value="<spring:message code="finder.search" />" />&nbsp; 
	<input type="button" name="cancel"
		value="<spring:message code="finder.cancel" />"
		onclick="javascript: relativeRedir('trip/list.do');" />
	<br />
</form:form>
</security:authorize>

