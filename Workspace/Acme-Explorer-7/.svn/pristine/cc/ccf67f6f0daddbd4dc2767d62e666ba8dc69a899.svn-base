
package repositories;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.stereotype.Repository;

import domain.Folder;

@Repository
public interface FolderRepository extends JpaRepository<Folder, Integer> {
	
	@Query("select f from Folder f where f.name = 'notification box' and f.owner.id = ?1")
	Folder findNotificationFolderActorId(int actorId);
	
	@Query("select f from Folder f where f.name = 'in box' and f.owner.id = ?1")
	Folder findInBoxFolderActorId(int actorId);
	
	@Query("select f from Folder f where f.name = 'out box' and f.owner.id = ?1")
	Folder findOutBoxFolderActorId(int actorId);
	
	@Query("select f from Folder f where f.name = 'spam box' and f.owner.id = ?1")
	Folder findSpamFolderActorId(int actorId); 
	
	@Query("select f from Folder f where f.name = 'trash box' and f.owner.id = ?1")
	Folder findTrashFolderActorId(int actorId);
}
