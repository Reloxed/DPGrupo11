<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd		
        http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd
    ">

	<!-- Security infrastructure -->

	<bean id="loginService" class="security.LoginService" />

	<bean id="passwordEncoder"
		class="org.springframework.security.authentication.encoding.Md5PasswordEncoder" />

	<!-- Access control -->

	<security:http auto-config="true" use-expressions="true">
		<security:intercept-url pattern="/" access="permitAll" />
		<security:intercept-url pattern="/favicon.ico"
			access="permitAll" />
		<security:intercept-url pattern="/images/**"
			access="permitAll" />
		<security:intercept-url pattern="/scripts/**"
			access="permitAll" />
		<security:intercept-url pattern="/styles/**"
			access="permitAll" />
		<security:intercept-url pattern="/views/misc/index.jsp"
			access="permitAll" />
		<security:intercept-url pattern="/security/login.do"
			access="permitAll" />
		<security:intercept-url pattern="/security/loginFailure.do"
			access="permitAll" />


		<security:intercept-url pattern="/report/customer/**"
			access="hasRole('CUSTOMER')" />
		<security:intercept-url pattern="/complaint/customer/**"
			access="hasRole('CUSTOMER')" />
		<security:intercept-url pattern="/fixUpTask/customer/**"
			access="hasRole('CUSTOMER')" />
		<security:intercept-url pattern="/application/customer,handy-worker/**"
			access="hasAnyRole('CUSTOMER','HANDYWORKER')" />
		<security:intercept-url pattern="/note/customer/**"
			access="hasRole('CUSTOMER')" />
		<security:intercept-url pattern="/creditcard/**"
			access="hasRole('CUSTOMER')" />
		<security:intercept-url pattern="/tapu/edit.do"
			access="hasRole('CUSTOMER')" />

		<security:intercept-url pattern="/complaint/referee/**"
			access="hasRole('REFEREE')" />
		<security:intercept-url pattern="/report/referee/**"
			access="hasRole('REFEREE')" />
		<security:intercept-url pattern="/note/referee/**"
			access="hasRole('REFEREE')" />

		<security:intercept-url pattern="/complaint/handyWorker/**"
			access="hasRole('HANDYWORKER')" />
		<security:intercept-url pattern="/report/handyWorker/**"
			access="hasRole('HANDYWORKER')" />
		<security:intercept-url pattern="/curriculum/handyWorker/**"
			access="hasRole('HANDYWORKER')" />
		<security:intercept-url pattern="/educationRecord/handyWorker/**"
			access="hasRole('HANDYWORKER')" />
		<security:intercept-url pattern="/endorserRecord/handyWorker/**"
			access="hasRole('HANDYWORKER')" />
		<security:intercept-url pattern="/miscellaneousRecord/handyWorker/**"
			access="hasRole('HANDYWORKER')" />
		<security:intercept-url pattern="/professionalRecord/handyWorker/**"
			access="hasRole('HANDYWORKER')" />
		<security:intercept-url pattern="/fixUpTask/handyWorker/display.do"
			access="hasRole('HANDYWORKER')" />
		<security:intercept-url pattern="/fixUpTask/handyWorker/list.do"
			access="hasRole('HANDYWORKER')" />
		<security:intercept-url pattern="/finder/handyWorker/**"
			access="hasRole('HANDYWORKER')" />
		<security:intercept-url pattern="/application/handy-worker/**"
			access="hasRole('HANDYWORKER')" />
		<security:intercept-url pattern="/phase/handy-worker/**"
			access="hasRole('HANDYWORKER')" />
		<security:intercept-url pattern="/note/handyWorker/**"
			access="hasRole('HANDYWORKER')" />


		<security:intercept-url pattern="/category/administrator/**"
			access="hasRole('ADMINISTRATOR')" />
		<security:intercept-url pattern="/statistics/administrator/display.do"
			access="hasRole('ADMINISTRATOR')" />
		<security:intercept-url pattern="/warranty/administrator/**"
			access="hasRole('ADMINISTRATOR')" />
		<security:intercept-url pattern="/system-configuration/administrator/**"
			access="hasRole('ADMINISTRATOR')" />
		<security:intercept-url pattern="/administrator/administrator/create.do"
			access="hasRole('ADMINISTRATOR')" />
		<security:intercept-url pattern="/referee/referee/create.do"
			access="hasRole('ADMINISTRATOR')" />
		<security:intercept-url
			pattern="/actor/administrator/list-suspicious-actors.do" access="hasRole('ADMINISTRATOR')" />
		<security:intercept-url pattern="/message/administrator/broadcast.do"
			access="hasRole('ADMINISTRATOR')" />

		<security:intercept-url pattern="/tapu/list.do"
			access="hasAnyRole('CUSTOMER','HANDYWORKER')" />
		<security:intercept-url pattern="/tapu/display.do"
	access="hasAnyRole('CUSTOMER','HANDYWORKER')" />

		<security:intercept-url pattern="/actor/**"
			access="isAuthenticated()" />
		<security:intercept-url pattern="/box/actor/**"
			access="isAuthenticated()" />
		<security:intercept-url pattern="/message/actor/create.do"
			access="isAuthenticated()" />




		<security:intercept-url pattern="/administrator/**"
			access="isAuthenticated()" />
		<security:intercept-url pattern="/application/accept"
			access="isAuthenticated()" />
		<security:intercept-url pattern="/actor/display.do"
			access="isAuthenticated()" />






		<security:intercept-url pattern="/customer/customer/create.do"
			access="isAnonymous()" />
		<security:intercept-url pattern="/handyworker/handyworker/create.do"
			access="isAnonymous()" />



		<security:form-login login-page="/security/login.do"
			password-parameter="password" username-parameter="username"
			authentication-failure-url="/security/loginFailure.do" />

		<security:logout logout-success-url="/"
			invalidate-session="true" />
	</security:http>

</beans>